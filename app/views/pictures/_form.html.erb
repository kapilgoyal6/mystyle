<%= form_for(@picture) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="field">
    <%= f.label :category %>
    <%= f.select :category, options_for_select(%w[Personal Family Friends]), :prompt=>'Select Category*' %>
  </div>
  <br>
  <div class="field">
    <%= f.check_box :favourite %><%= f.label :favourite %>
  </div>
  <br>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Upload Image' %>
  </div>
<% end %>
