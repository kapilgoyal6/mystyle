<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h3>

      <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="field">
    <%= f.label :category %>
    <%= f.select :category, options_for_select(%w[Hindi English Punjabi]), :prompt=>'Select Category*' %>
  </div>
  <br>
  <div class="field">
    <%= f.check_box :favourite %>
    <%= f.label :favourite %>
  </div>
  <br>
  <div class="field">
    <%= f.label :file, 'Select Song' %>
    <%= f.file_field :file, :value => "default" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Upload Song' %>
  </div>
<% end %>
